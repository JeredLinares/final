<div>

    <% if @current_user %>
        <h5> You are already logged in. </h5>

    <% else %>

        <% if @failed==1 %>
            <h4 style="color:red">That login is not in our records.</h4>
            <h4 style="color:red">Please try again. </h4>
        <% end %>

        <form method="POST" action="/login/validate">
            <div class="form-group">
                <label for="username">Username: </label>
                <input name="username" type="text" class="form-control" id="username" aria-describedby="username">
            </div>
            <div class="form-group">
                <label for="password">Password: </label>
                <input name="password" type="password" class="form-control" id="password">
            </div>
            <h5>Note: Fields are case sensitive </h5>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        <br />
        </form>
        <form action="/new/player">
            <div>
                <h5>You must be registered to play</h5>
                <h5>Create an account by registirng. </h5>
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
        </form
    <% end %>
</div>
